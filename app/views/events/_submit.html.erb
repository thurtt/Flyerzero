<%=f.hidden_field :email %>

<br /><br />
<div id="add_panel">
	<table>
		
		<tr>
			<td>
				<div class="stepcontainer">
					<div class="stepnumber"><p class="stepnumber">2</p></div>
					<div class="steptext">Name or comment about this image.</div>
				</div>
			</td>
		</tr>
		
		<tr>
 			<td style="">
 				<%=f.text_area :media, :placeholder=>"Name or comment about this image. #hashtags welcome!", :class=>"input_text", :rows=>4%>
 				<br /><br /><br /><br />
 			</td>
		</tr>
		
		
		<tr>
			<td>
				<div class="stepcontainer">
					<div class="stepnumber"><p class="stepnumber">3</p></div>
					<div class="steptext">When is this relevant?</div>
				</div>
			</td>
		</tr>
		
		<tr>
			<td>
				<%=f.text_field :expiry, :placeholder=>"Now? In a month?", :class=>"input_text", :value=>Time.now().strftime("%a, %d %b %Y")%>
				<br /><br /><br /><br />
			</td>
		</tr>
		<tr>
			<td>
				<div class="stepcontainer">
					<div class="stepnumber"><p class="stepnumber">4</p></div>
					<div class="steptext">Tag this with a location.</div>
				</div>
			</td>
		</tr>
		<tr>
			<td>
				<input class="input_text" id="event_loc" placeholder="Search for nearby venues">
				<%= image_tag "cycle-small.gif", :id=>"search_wait", :size=>"20x20" %>
				<br /><br />
			</td>
		</tr>
		<tr>
			<td><div id="foursquare_search_error">There was a problem connecting to the Foursquare venue search service. Unfortunately, you will not be able to submit a flyer until the service is back up. :(</div></td>
		</tr>
		<tr>
			<td class="offset" style="height:50px;">
			      <%= foursquare_venue( @event ) %>
			      
			<br /><br /><br /><br />
			<%if !@event.id%><label for="fbcheck" style="font-size:0.8em;font-style:italic;">Post to Facebook: </label> <input type="checkbox" name="send_to_facebook" value="on" id="fbcheck" checked><%end%>
			</td>
		</tr>
		<!-- <tr>
			<td>
				<%=f.text_field :fbevent, :placeholder=>"Put your Facebook or Google+ event URL here!", :class=>"input_text"%>
			</td>
		</tr>
		//-->
		<tr>
		  <td><div class="buttons"><input value="Create" id="submit_event" type="button" %></div><div class="buttons"><input value="Start Over" id="clear_form" type="button" %></div></td>
		</tr>
	</table>
	<%= f.hidden_field :event_id %>
	<% if @event.validation_hash && @event.id %>
		<%= f.hidden_field :id %>
		<%= f.hidden_field :validation_hash %>
	<% end %>


</div>